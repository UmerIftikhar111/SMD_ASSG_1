<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/nav_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="X"
            android:textColor="#AA7676"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Item"
            android:textColor="#AA7676"
            android:textSize="25dp"
            android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CDB5B5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingTop="20dp"
        >


        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:padding="16dp"
            android:background="@drawable/border_background">

            <!-- Camera icon in the center -->
            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/yelow_camera" />

            <!-- "Upload Image" text below the camera icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cameraIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="Upload Image"
                android:textSize="16dp"
                android:textColor="#FF9800" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:padding="16dp"
            android:background="@drawable/border_background"
            android:layout_marginLeft="10dp">

            <!-- Camera icon in the center -->
            <ImageView
                android:id="@+id/videoIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/yellow_video" />

            <!-- "Upload Image" text below the camera icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videoIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:text="Upload Video"
                android:textSize="16dp"
                android:textColor="#FF9800" />

        </RelativeLayout>


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="693dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"


                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Name"
                android:textColor="#35546C"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#EAE1E1"
                android:hint="Enter Name"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="30dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Hourly Rate"
                android:textColor="#35546C"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#EAE1E1"
                android:hint="Enter Hourly rate"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="30dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:text="Description"
                android:textColor="#35546C"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="95dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#EAE1E1"
                android:hint="Enter Description"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="30dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="30dp"
                android:text="City"
                android:textColor="#35546C"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Spinner

                android:layout_width="350dp"
                android:layout_height="65dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="#EAE1E1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:textSize="30dp"

                />

            <Button
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="80dp"
                android:background="#9C27B0"
                android:text="Post Item"
                android:textColor="@color/white" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
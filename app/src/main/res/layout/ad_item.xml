<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/itemBox"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="165dp"
    android:paddingTop="5dp"
    android:paddingLeft="3dp"
    android:layout_marginLeft="20dp"
    android:background="@drawable/rounded_corners_textfields"
    >

    <ImageView
        android:id="@+id/adImage"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/adTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="18dp"
        android:layout_below="@id/adImage"
        android:layout_marginTop="10dp"
        android:paddingLeft="0dp" />

    <TextView
        android:id="@+id/adPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10$/hr"
        android:textSize="18dp"
        android:textColor="#CDDC39"
        android:textStyle="bold"
        android:layout_below="@id/adImage"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/adLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Islamabad"
        android:textSize="13dp"
        android:layout_below="@id/adTitle"
        android:layout_marginTop="5dp"
        android:paddingLeft="0dp" />

    <TextView
        android:id="@+id/adDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7th Mar"
        android:textSize="13dp"
        android:layout_below="@id/adTitle"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp" />


</RelativeLayout>

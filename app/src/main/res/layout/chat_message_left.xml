<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receiver_msgContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="60dp"
    android:background="#FFFFFF"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_profile_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/umer_profile"
        />

    <TextView
        android:id="@+id/receiver_messageBody"
        android:layout_toRightOf="@+id/receiver_profile_icon"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_corners_textfields"
        android:padding="7dp"
        android:text="sample message"
        android:textColor="#35546C"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/receiver_time"
        android:layout_toRightOf="@+id/receiver_messageBody"
        android:layout_alignBottom="@+id/receiver_messageBody"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="12:30"
        android:textColor="#35546C"
        android:textSize="13dp"
        android:textStyle="bold" />


</RelativeLayout>
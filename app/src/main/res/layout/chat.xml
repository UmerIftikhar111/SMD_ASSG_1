<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Chat"
            android:textColor="#AA7676"
            android:textSize="25dp"
            android:textStyle="bold" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CDB5B5"/>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="520dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:orientation="horizontal"


                >


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_pic" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="00dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    >

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Alex"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="New messages"
                    android:textSize="20dp"
                    android:textColor="#FFEB3B"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/nav_to_chat_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/chat_open_arrow"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:orientation="horizontal"


                >


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_pic" />

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="John"
                        android:textSize="30dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="No messages"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/chat_open_arrow"/>


            </LinearLayout>




        </LinearLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="22dp"
            android:paddingTop="20dp"
            android:src="@drawable/home_icn" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/homeIcon"
            android:layout_marginLeft="20dp"
            android:text="Home" />

        <ImageView
            android:id="@+id/searchItems"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="85dp"
            android:paddingTop="20dp"
            app:srcCompat="@android:drawable/ic_search_category_default" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/searchItems"
            android:layout_marginLeft="90dp"
            android:text="Search" />

        <ImageView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="232dp"
            android:paddingTop="20dp"
            android:src="@drawable/chat_icn" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/chat"
            android:layout_marginLeft="232dp"
            android:text="Chat" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="305dp"
            android:paddingTop="20dp"
            android:src="@drawable/profile_icn" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile"
            android:layout_marginLeft="305dp"
            android:text="Profile" />

        <ImageView
            android:id="@+id/addItem"
            android:layout_width="45dp"
            android:layout_height="105dp"
            android:layout_marginLeft="155dp"
            android:paddingTop="0dp"
            android:scaleX="1"
            android:src="@drawable/pls_icn" />


    </RelativeLayout>


</LinearLayout>
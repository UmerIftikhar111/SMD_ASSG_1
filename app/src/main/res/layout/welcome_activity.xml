<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="0dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Hello,"
            android:textColor="#AA7676"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/current_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="there!"
            android:textColor="#CDDC39"
            android:textSize="20dp"
            android:textStyle="bold" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CDB5B5" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="520dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Featured Items"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Your Items"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAdsPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Recent Items"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />


        </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="22dp"
            android:paddingTop="20dp"
            android:src="@drawable/home_icn" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/homeIcon"
            android:layout_marginLeft="20dp"
            android:text="Home" />

        <ImageView
            android:id="@+id/searchItems"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="85dp"
            android:paddingTop="20dp"
            app:srcCompat="@android:drawable/ic_search_category_default" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/searchItems"
            android:layout_marginLeft="90dp"
            android:text="Search" />

        <ImageView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="232dp"
            android:paddingTop="20dp"
            android:src="@drawable/chat_icn" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/chat"
            android:layout_marginLeft="232dp"
            android:text="Chat" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="305dp"
            android:paddingTop="20dp"
            android:src="@drawable/profile_icn" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_below="@+id/profile"
            android:layout_marginLeft="305dp"
            android:text="Profile" />

        <ImageView
            android:id="@+id/addItem"
            android:layout_width="45dp"
            android:layout_height="105dp"
            android:layout_marginLeft="155dp"
            android:paddingTop="0dp"
            android:scaleX="1"
            android:src="@drawable/pls_icn" />


    </RelativeLayout>



</LinearLayout>
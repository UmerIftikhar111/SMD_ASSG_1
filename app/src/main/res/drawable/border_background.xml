<!-- res/drawable/dotted_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#9F6565"
                android:dashWidth="4dp"  <!-- Width of each dash -->
            android:dashGap="4dp"    <!-- Gap between dashes -->
            />
        </shape>
    </item>
</layer-list>

